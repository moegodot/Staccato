# EditorConfig is awesome: https://editorconfig.org

root = true

# General settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# --- C# (source/managed) style settings ---
[*.cs]
indent_size = 4

# Force traditional C# brace wrapping style (Allman style)
csharp_new_line_before_open_brace = all
csharp_new_line_before_else = true
csharp_new_line_before_catch = true
csharp_new_line_before_finally = true
# Naming convention suggestions
dotnet_naming_rule.interface_should_be_begun_with_i.severity = suggestion
dotnet_naming_rule.interface_should_be_begun_with_i.symbols = interface_symbols
dotnet_naming_symbols.interface_symbols.applicable_kinds = interface
dotnet_naming_symbols.interface_symbols.applicable_accessibilities = *
dotnet_naming_symbols.interface_symbols.required_prefix = I

# --- Rust (source/native/rust) style settings ---
[*.rs]
indent_style = space
indent_size = 4
# Rust is usually managed by rustfmt, here provide basic alignment

# --- C++ (source/native/cpp) style settings ---
[*.{cpp,h,hpp,c}]
indent_style = space
indent_size = 4

# --- Build scripts & configuration files (JSON, YAML, XML) ---
[*.{json,yml,yaml,xml}]
indent_size = 2

# --- Markdown ---
[*.md]
trim_trailing_whitespace = false

# --- NUKE / Shell Scripts ---
[*.{bat,cmd}]
indent_size = 4
end_of_line = crlf
[*.{sh,bash,zsh}]
indent_size = 4
end_of_line = lf
